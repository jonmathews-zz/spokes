<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spokes</title>

    <!-- Main css styles -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Main javascript files -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

</head>

<% if user_signed_in? %>
    <body class="fixed-sidebar <%= controller_name %> <%= action_name %>">
<% else %>
    <body class="gray-bg <%= controller_name %> <%= action_name %>"
<% end %>   

    <!-- Wrapper-->
    <div id="wrapper">

        <% if user_signed_in? %>
            <!-- Navigation -->
            <%= render 'layouts/navigation' %>

            <!-- Page wraper -->
            <div id="page-wrapper" class="gray-bg">

                <!-- Page wrapper -->
                <%= render 'layouts/topnavbar' %>

                <%= render 'layouts/messages' %>

                <!-- Main view  -->
                <%= yield %>

            </div>
            <!-- End page wrapper-->
        <% else %>
            <!-- Page wraper -->
            <div class="container">

                <%= render 'layouts/messages' %>
                
                <!-- Main view  -->
                <%= yield %>
            </div>
            <!-- End page wrapper-->
        <% end %>

    </div>
    <!-- End wrapper-->

</body>
</html>
