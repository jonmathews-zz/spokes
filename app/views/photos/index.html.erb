<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Manage photos</h5>
            </div>
            <div class="ibox-content">
            <%= link_to 'New Photo', new_photo_path, class: 'btn btn-primary' %>
                      <table class="table">
              <thead>
                <tr>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @photos.each do |photo| %>
                  <tr>
                    <td><%= image_tag photo.image_url.to_s, class: 'img-responsive' %></td>
                    <td><%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

          </div>
        </div>
      </div>
    </div>
</div>